<UserControl x:Class="LuxuryCarRental.Views.CatalogView"
             x:Name="Root"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:local="clr-namespace:LuxuryCarRental.Converters" 
            xmlns:viewmodels="clr-namespace:LuxuryCarRental.ViewModels" 
            d:DataContext="{d:DesignInstance Type=viewmodels:CatalogViewModel}"
            mc:Ignorable="d"
            d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:ImagePathToBitmapConverter x:Key="ImagePathToBitmapConverter"/>
        <DataTemplate x:Key="VehicleCardTemplate">
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="8" Margin="8">
                <StackPanel Width="200">
                    <Image Source="{Binding ImagePath}"
                 Width="200" Height="120"
                 Stretch="UniformToFill"
                 Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding Name}"
                     FontSize="16" FontWeight="SemiBold"
                     TextWrapping="Wrap"
                     Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding DailyRate.Amount, StringFormat=C}"
                     FontSize="14"
                     Foreground="DarkGreen"/>
                    <Button Content="Rent Now"
                      Margin="0,8,0,0"
                      Command="{Binding DataContext.AddToCartCommand, ElementName=Root}"
                            CommandParameter="{Binding}"
                      HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="16" Orientation="Vertical">

            <!-- CAR ROW -->
            <TextBlock Text="Cars"
                 FontSize="20" FontWeight="Bold"
                 Margin="0,0,0,8"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled"
                    Margin="0,0,0,24">
                <ItemsControl ItemsSource="{Binding Cars}"
                      ItemTemplate="{StaticResource VehicleCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                         ItemWidth="220" ItemHeight="260"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!-- LUXURY CAR ROW -->
            <TextBlock Text="Luxury Cars"
                 FontSize="20" FontWeight="Bold"
                 Margin="0,0,0,8"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled"
                    Margin="0,0,0,24">
                <ItemsControl ItemsSource="{Binding LuxuryCars}"
                      ItemTemplate="{StaticResource VehicleCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                         ItemWidth="220" ItemHeight="260"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!-- MOTORCYCLE ROW -->
            <TextBlock Text="Motorcycles"
                 FontSize="20" FontWeight="Bold"
                 Margin="0,0,0,8"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled"
                    Margin="0,0,0,24">
                <ItemsControl ItemsSource="{Binding Motorcycles}"
                      ItemTemplate="{StaticResource VehicleCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                         ItemWidth="220" ItemHeight="260"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!-- YACHT ROW -->
            <TextBlock Text="Yachts"
                 FontSize="20" FontWeight="Bold"
                 Margin="0,0,0,8"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Yachts}"
                      ItemTemplate="{StaticResource VehicleCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                         ItemWidth="220" ItemHeight="260"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

        </StackPanel>
    </ScrollViewer>
</UserControl>
