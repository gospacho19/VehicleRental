<UserControl
    x:Class="LuxuryCarRental.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource LightBackgroundBrush}">

    <UserControl.Resources>
        <Style x:Key="MyTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="MyPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border
            Grid.Column="1"
            Style="{StaticResource CardPanel}"
            Background="{StaticResource CardBackgroundBrush}"
            CornerRadius="8"
            Padding="16"
            Margin="0,40,0,40"
            Width="350">

            <Grid>
                <Grid.RowDefinitions>
                    <!-- 1) Section Title -->
                    <RowDefinition Height="Auto"/>

                    <!-- 2) Username -->
                    <RowDefinition Height="Auto"/>

                    <!-- 3) Password -->
                    <RowDefinition Height="Auto"/>

                    <!-- 4) Confirm Password -->
                    <RowDefinition Height="Auto"/>

                    <!-- 5) Full Name -->
                    <RowDefinition Height="Auto"/>

                    <!-- 6) Driver License # -->
                    <RowDefinition Height="Auto"/>

                    <!-- 7) Email -->
                    <RowDefinition Height="Auto"/>

                    <!-- 8) Phone -->
                    <RowDefinition Height="Auto"/>

                    <!-- 9) Error Message -->
                    <RowDefinition Height="Auto"/>

                    <!-- 10) Buttons -->
                    <RowDefinition Height="Auto"/>

                    <!-- Filler -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 1) Section Title -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="Register"
                    Style="{StaticResource SectionTitleText}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,16" />

                <!-- 2) Username -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Username:"
                    Style="{StaticResource LabelText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,8" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource MyTextBoxStyle}"
                    Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,8"/>

                <!-- 3) Password -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Password:"
                    Style="{StaticResource LabelText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,8" />
                <PasswordBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource MyPasswordBoxStyle}"
                    PasswordChanged="PasswordBox_PasswordChanged"
                    Margin="0,0,0,8"/>

                <!-- 4) Confirm Password -->
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Confirm Password:"
                    Style="{StaticResource LabelText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,8" />
                <PasswordBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource MyPasswordBoxStyle}"
                    PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                    Margin="0,0,0,8"/>

                <!-- 5) Full Name -->
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="Full Name:"
                    Style="{StaticResource LabelText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,8" />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource MyTextBoxStyle}"
                    Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,8"/>

                <!-- 6) Driver License # -->
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Text="Driver License #:"
                    Style="{StaticResource LabelText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,8" />
                <TextBox
                    Grid.Row="5"
                    Grid.Column="1"
                    Style="{StaticResource MyTextBoxStyle}"
                    Text="{Binding DriverLicenseNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,8"/>

                <!-- 7) Email -->
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Text="Email:"
                    Style="{StaticResource LabelText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,8" />
                <TextBox
                    Grid.Row="6"
                    Grid.Column="1"
                    Style="{StaticResource MyTextBoxStyle}"
                    Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,8"/>

                <!-- 8) Phone -->
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Text="Phone:"
                    Style="{StaticResource LabelText}"
                    VerticalAlignment="Center"
                    Margin="0,0,12,8" />
                <TextBox
                    Grid.Row="7"
                    Grid.Column="1"
                    Style="{StaticResource MyTextBoxStyle}"
                    Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,8"/>

                <!-- 9) Error Message -->
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="{Binding ErrorMessage}"
                    Foreground="Red"
                    FontWeight="SemiBold"
                    Margin="0,8,0,0"/>

                <!-- 10) Buttons -->
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">

                    <Button
                        Content="Register"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Width="100"
                        Height="32"
                        Margin="0,0,12,0" />

                    <Button
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Width="100"
                        Height="32" />
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>
