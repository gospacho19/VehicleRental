<!-- LuxuryCarRental/Views/ProfileView.xaml -->
<UserControl
    x:Class="LuxuryCarRental.Views.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:LuxuryCarRental.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="600">

    <!-- NOTE: We removed the <UserControl.DataContext> block entirely.
         The DataContext will be set by MainViewModel (e.g. via a ContentControl binding). -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Personal Info rows -->
            <RowDefinition Height="Auto"/>
            <!-- Full Name -->
            <RowDefinition Height="Auto"/>
            <!-- Driver's License -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Phone -->
            <RowDefinition Height="Auto"/>
            <!-- Save Profile Button -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer (separator) -->
            <RowDefinition Height="Auto"/>
            <!-- Add Card + Logout Buttons -->
            <RowDefinition Height="*"   />
            <!-- Filler -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ───── Full Name ───── -->
        <TextBlock Text="Full Name:" 
                   Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="4"/>

        <!-- ───── Driver's License ───── -->
        <TextBlock Text="Driver's License:" 
                   Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding DriverLicenseNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="4"/>

        <!-- ───── Email ───── -->
        <TextBlock Text="Email:" 
                   Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="4"/>

        <!-- ───── Phone ───── -->
        <TextBlock Text="Phone:" 
                   Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="4"/>

        <!-- ───── Save Profile Button ───── -->
        <Button Grid.Row="4"
                Grid.Column="1"
                Content="Save Profile"
                Command="{Binding SaveProfileCommand}"
                HorizontalAlignment="Right"
                Padding="8,4"
                Margin="0,8,0,8" />

        <!-- ───── Spacer (separator) ───── -->
        <Separator Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8"/>

        <!-- ───── Add Card & Log Out Buttons ───── -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <!-- Add Card -->
            <Button Content="Add Card"
                    Command="{Binding AddCardCommand}"
                    Width="100"
                    Height="30"
                    Margin="0,0,20,0" 
                    />

            <!-- Log Out -->
            <Button Content="Log Out"
                    Command="{Binding LogoutCommand}"
                    Width="100"
                    Height="30"/>
        </StackPanel>

        <!-- ───── Filler Row ───── -->
        <!-- Nothing needed in Grid.Row="7" -->
    </Grid>
</UserControl>
