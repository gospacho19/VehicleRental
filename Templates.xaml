<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="clr-namespace:LuxuryCarRental.Models"
    xmlns:vm="clr-namespace:LuxuryCarRental.ViewModels">

    <DataTemplate x:Key="VehicleCard_CatalogTemplate" DataType="{x:Type model:Vehicle}">
        <Border
        Background="White"
        BorderBrush="{StaticResource BorderBrushColor}"
        BorderThickness="1"
        CornerRadius="4"
        Margin="4"
        Width="180"
        Padding="4"
        SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Image -->
                    <RowDefinition Height="Auto"/>
                    <!-- Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Price -->
                    <RowDefinition Height="Auto"/>
                    <!-- Button -->
                </Grid.RowDefinitions>

                <!-- Vehicle Image -->
                <Border Grid.Row="0"
                Background="#EEE"
                CornerRadius="2"
                Height="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="0,0,0,4">
                    <Image Source="{Binding ImageSource}"
                 Stretch="UniformToFill"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"/>
                </Border>

                <!-- Vehicle Name -->
                <TextBlock Grid.Row="1"
                   Text="{Binding Name}"
                   FontWeight="SemiBold"
                   FontSize="13"
                   TextWrapping="Wrap"
                   MaxHeight="36"
                   Foreground="{StaticResource PrimaryBrush}"
                   Margin="0,0,0,2"/>

                <!-- Vehicle Price -->
                <TextBlock Grid.Row="2"
                   Text="{Binding DailyRate.Amount, StringFormat=C}"
                   FontSize="12"
                   Foreground="{StaticResource SecondaryBrush}"
                   Margin="0,0,0,4"/>

                <Button Grid.Row="3"
                Content="Add to Cart"
                FontSize="12"
                Style="{StaticResource SecondaryButton}"
                Command="{Binding DataContext.AddToCartCommand,
                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                CommandParameter="{Binding}"
                IsEnabled="{Binding CurrentlyAvailable}"
                HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
    </DataTemplate>
    
    <DataTemplate x:Key="VehicleCard_CategoryTemplate" DataType="{x:Type model:Vehicle}">
        <Border
        Background="White"
        BorderBrush="{StaticResource BorderBrushColor}"
        BorderThickness="1"
        CornerRadius="4"
        Margin="4"
        Width="180"
        Padding="4"
        SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Image -->
                    <RowDefinition Height="Auto"/>
                    <!-- Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Price -->
                    <RowDefinition Height="Auto"/>
                    <!-- Button -->
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                Background="#EEE"
                CornerRadius="2"
                Height="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="0,0,0,4">
                    <Image Source="{Binding ImageSource}"
                 Stretch="UniformToFill"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"/>
                </Border>

                <TextBlock Grid.Row="1"
                   Text="{Binding Name}"
                   FontWeight="SemiBold"
                   FontSize="13"
                   TextWrapping="Wrap"
                   MaxHeight="36"
                   Foreground="{StaticResource PrimaryBrush}"
                   Margin="0,0,0,2"/>

                <TextBlock Grid.Row="2"
                   Text="{Binding DailyRate.Amount, StringFormat=C}"
                   FontSize="12"
                   Foreground="{StaticResource SecondaryBrush}"
                   Margin="0,0,0,4"/>

                <Button Grid.Row="3"
                Content="Rent Now"
                FontSize="12"
                Style="{StaticResource SecondaryButton}"
                Command="{Binding DataContext.RentNowCommand,
                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                CommandParameter="{Binding}"
                IsEnabled="{Binding CurrentlyAvailable}"
                HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>
